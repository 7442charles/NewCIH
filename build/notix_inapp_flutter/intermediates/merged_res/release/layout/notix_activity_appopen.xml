<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_appopen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_appopen_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:id="@+id/ll_appopen_continue_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="0.8"
            android:background="@drawable/notix_sh_left_rounded"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_appopen_app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                tools:background="@android:color/holo_blue_light"
                tools:src="@android:drawable/ic_menu_camera" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/notix_continue_to_app"
                    android:textColor="#7A7C7F" />

                <TextView
                    android:id="@+id/tv_appopen_appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Application name" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_appopen_continue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iv_appopen_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/notix_ic_chevron_right_24" />

                <ProgressBar
                    android:id="@+id/pb_appopen_continue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/notix_primary_color"
                    android:indeterminateTintMode="src_atop" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_appopen_content_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/notix_sh_top_rounded"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_appopen_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:scaleType="centerCrop"
            tools:src="@android:drawable/ic_menu_camera" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_appopen_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                tools:background="@android:color/holo_blue_light"
                tools:src="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/tv_appopen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="24dp"
                android:maxLines="3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="Ad title title title!" />

            <TextView
                android:id="@+id/tv_appopen_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:textAlignment="center"
                android:textColor="#5F5F5F"
                android:textSize="18sp"
                tools:text="Ad description description description description description description description description description" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <ImageView
            android:id="@+id/iv_appopen_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/notix_ic_circle_chevron_right_40" />
    </LinearLayout>
</LinearLayout>